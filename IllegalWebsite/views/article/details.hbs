<div class="container body-content" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        </br></br></br></br></br></br>
        <div class="col-md-5 pull-left ">

            <article>
                <header>
                    <h2><u><b>{{this.article.title}}</u></h2><span style="color:green; font-size:27px; ">{{this.article.price}}
                    $</span></b>
                    <br>
                    <strong>Category: {{this.category.name}}</strong>
                </header>

                {{#if this.article.imagePath}}
                    <img src="{{this.article.imagePath}}" alt="Weapon" height="350" width="600">
                {{/if}}
                <small class="author">
                    {{author.fullName}}
                </small>
                <big class="author pull-right" >
                    {{#if author.skype}}
                        <strong>Skype:</strong> {{author.skype}}
                    {{else}}
                        <strong>Skype:</strong> Not Presented
                    {{/if}}
                </big>

            </article>
        </div>
        <div class="col-md-5 pull-right">


            </br></br></br></br></br>
            <div class="jumbotron">
                <h2><b>{{this.article.title}}</b></h2>
                <p>{{this.article.content}}</p>

            </div>


        </div>

        <div class="row">
            <div class="col-md-12 ">
                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs" href="/article/edit/{{this.article.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{this.article.id}}">Delete &raquo;</a>
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </div>

        </div>


    </div>
</div>
