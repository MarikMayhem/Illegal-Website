<center><h1>Categories</h1></center>

<div class="container body-content">
    <div class="row"> {{#each categories}}
        <div class="col-md-3">
            <header><h2><strong><a style="color:black; font-family: 'Archivo Black';" href="/category/{{ this.id }}"> {{ this.name }} ({{ this.articles.length }}) </a></strong></h2>
            </header>
        </div> {{/each}} </div>
</div>
</br></br>
<center><h1>Newest Listings</h1></center>
<div class="container body-content">
    <div class="row">
        </br></br>


        {{#each articles}}
            <div class="col-md-4">
                <article>
                    <header>
                        <h2><u><b>{{this.title}}</u></h2><span
                            style="color:green; float:right; font-size:27px; ">{{this.price}}
                        $</span></b>
                    </header>

                    <p> 
                        {{restrictSize this.content}}
                    </p>

                    {{#if this.imagePath}}
                        <center><img src="{{this.imagePath}}" alt="Weapon" height="250" width="380px"></center>
                    {{/if}}

                    <small class="author">
                        By {{this.author.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>

                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
